<div class="container mx-auto px-4">
  <div class="relative isolate pt-20">
    <div class="space-y-10 divide-y divide-gray-900/10">
      <%= turbo_frame_tag "profile" do %>
        <div class="grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-3">
          <div class="px-4 sm:px-0">
            <h2 class="text-base font-semibold leading-7 text-gray-900">ユーザー情報</h2>
          </div>

          <div class="shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
            <div class="px-4 py-6 sm:p-8">
              <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="border-b-2 sm:col-span-4">
                  <%= label_tag :name, "ユーザー名", class: "block text-lg font-bold leading-6" %>
                  <div class="mt-2 sm:max-w-md">
                    <span class="block py-1.5 pl-1 sm:text-base sm:leading-6"><%= current_user.name %></span>
                  </div>
                </div>

                <div class="border-b-2 sm:col-span-4">
                  <%= label_tag :email, "メールアドレス", class: "block text-lg font-bold leading-6" %>
                  <div class="mt-2 sm:max-w-md">
                    <span class="block py-1.5 pl-1 sm:text-base sm:leading-6"><%= current_user.email %></span>
                  </div>
                </div>

                <div class="border-b-2 sm:col-span-4">
                  <%= label_tag :birthday, "生年月日", class: "block text-lg font-bold leading-6" %>
                  <div class="mt-2 sm:max-w-md">
                    <span class="block py-1.5 pl-1 sm:text-base sm:leading-6"><%= current_user.birthday %></span>
                  </div>
                </div>

                <div class="border-b-2 sm:col-span-4">
                  <%= label_tag :introduction, "自己紹介", class: "block text-lg font-bold leading-6" %>
                  <div class="mt-2 sm:max-w-md">
                    <span class="block py-1.5 pl-1 sm:text-base sm:leading-6"><%= current_user.introduction %></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
              <%= link_to "編集", edit_user_registration_path, class:"rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="pt-10 grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-3">
        <div class="px-4 sm:px-0">
          <h2 class="text-base font-semibold leading-7 text-gray-900">アカウント情報</h2>
        </div>

        <div class="shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
          <div class="px-4 py-6 sm:p-8">
            <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
              <div class="border-b-2 sm:col-span-4">
                <%= label_tag :password, "パスワード", class: "block text-lg font-bold leading-6" %>
                <div class="mt-2 sm:max-w-md">
                  <span class="block py-1.5 pl-1 sm:text-base sm:leading-6">*********</span>
                </div>
              </div>
            </div>
          </div>
          <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">編集</button>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-x-8 gap-y-8 pt-10 md:grid-cols-3">
        <div class="px-4 sm:px-0">
          <h2 class="text-base font-semibold leading-7 text-gray-900">Notifications</h2>
          <p class="mt-1 text-sm leading-6 text-gray-600">We'll always let you know about important changes, but you pick what else you want to hear about.</p>
        </div>

        <form class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
          <div class="px-4 py-6 sm:p-8">
            <div class="max-w-2xl space-y-10">
              <fieldset>
                <legend class="text-sm font-semibold leading-6 text-gray-900">By Email</legend>
              </fieldset>
            </div>
          </div>
          <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
            <button type="button" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
