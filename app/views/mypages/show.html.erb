<% provide(:title, "マイページ") %>
<div class="mt-6 py-10">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h1 class="mt-6 text-3xl font-bold leading-tight tracking-tight text-gray-900">マイページ</h1>
  </div>

  <div class="mx-auto max-w-7xl sm:px-4 lg:px-6">
    <div class="flex flex-col md:flex-row bg-white mt-6 mx-2 border border-gray-100 rounded-lg p-6 shadow-md">
      <div class="w-full md:w-1/2 pb-4 flex">
        <% if current_user.avatar.present? %>
          <div class="flex-shrink-0">
            <%= image_tag current_user.avatar, class: "w-20 h-20 md:w-40 md:h-40 mt-2 object-cover rounded-md shadow-lg" %>
          </div>
        <% end %>
        <div class="ml-4">
          <h3 class="text-xl font-semibold mb-2"><%= current_user.name %></h3>
          <% if @latest_user_weight %>
            <p class="mb-1 text-gray-700">前回の記録: <%= @latest_user_weight.weight %> kg</p>
            <p class="mb-1 text-gray-700 text-xs"><%= @latest_user_weight.date.to_fs(:custom_datetime) %></p>
          <% else %>
            <p class="mb-1 text-gray-700">体重の記録がありません</p>
          <% end %>
          <div class="text-sm text-blue-500 mt-6">
            <%= link_to '体重を記録', new_user_weight_path, class: "mr-1" %>|
            <%= link_to '体重を管理', user_weights_path, class: "mr-1" %>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 p-4 bg-gray-100">
        <% if @latest_user_weight.present? %>
          <%= render 'mypages/shared/user_weight_chart', user_weight: @user_weights_for_month, latest_weight: @latest_user_weight %>
        <% else %>
          <p>体重の記録がありません</p>
        <% end %>
      </div>
    </div>              
  
    <% if @dogs.blank? %>
      <p>まだ愛犬は登録されていません。</p>
      <%= link_to '愛犬を登録する', new_dog_path, class: "btn btn-primary" %>
    <% else %>
      <% @dogs.each do |dog| %>
        <div class="flex flex-col md:flex-row bg-white mt-6 mx-2 border border-gray-100 rounded-lg p-6 shadow-md">
          <div class="w-full md:w-1/2 pb-4 flex">
            <% if dog.avatar.present? %>
              <div class="flex-shrink-0">
                <%= image_tag dog.avatar, class: "w-20 h-20 md:w-40 md:h-40 mt-2 object-cover rounded-md shadow-lg" %>
              </div>
            <% end %>
            <div class="ml-4">
              <h3 class="text-xl font-semibold mb-2"><%= dog.name %></h3>
              <p class="mb-1 text-sm text-gray-700">誕生日: <%= dog.birthday %></p>
              <p class="mb-1 text-sm text-gray-700">性別: <%= I18n.t("activerecord.enums.dog.sex.#{dog.sex}") %></p>
              <p class="mb-1 text-sm text-gray-700">犬種: <%= dog.breed %></p>
              <div class="text-sm text-blue-500 mt-4">
                <%= link_to '編集', edit_dog_path(dog), 
                    class: "mr-2 rounded-md bg-indigo-600 px-3.5 py-1.5 text-ms font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                <%= link_to '削除', dog_path(dog), 
                    data: { turbo_method: :delete, turbo_confirm: "本当に#{dog.name}の情報を削除してよろしいですか？" }, 
                    class: "rounded-md bg-red-500 px-3.5 py-1.5 text-ms font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" %>
              </div>
            </div>
          </div>
          <div class="w-full md:w-1/2 p-4 bg-gray-100">
            <p>ここに<%= dog.name %>の体重グラフが表示されます</p>
          </div>
        </div>      
      <% end %>
    <% end %>
  </div>
</div>
