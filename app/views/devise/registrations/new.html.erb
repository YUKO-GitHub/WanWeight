<% provide(:title, "新規登録") %>
<div class="flex min-h-full flex-col justify-center mt-10 lg:mt-20 py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">新規登録</h2>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white mx-2 px-6 pt-6 pb-12 shadow sm:rounded-lg sm:px-12">
      <%= form_with model: @user, url: user_registration_path, class: "space-y-6", local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :name, "* ユーザー名", class: "block text-base font-bold leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :name, 
                  autofocus: true, 
                  placeholder: "20文字以内で入力してください", 
                  required: true, 
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-base sm:leading-6" %> 
          </div>
        </div>
        <div>
          <%= f.label :birthday, "* 生年月日", class: "block text-base font-bold leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.date_select :birthday, {start_year: 1950, end_year: 2023,
              include_blank: true, use_two_digit_numbers: true},
              {class: "rounded-md input-tab birthday-select border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-base sm:leading-6"}%>
          </div>
        </div>
        <div>
          <%= f.label :height, "* 身長", class: "block text-base font-bold leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.number_field :height, step: "0.1", min: 0.1,
                  placeholder: "身長を入力してください",
                  required: true, 
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-base sm:leading-6" %> 
          </div>
        </div>
        <div>
          <%= f.label :email, "* メールアドレス", class: "block text-base font-bold leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.email_field :email, 
                  autocomplete: "email",
                  placeholder: "メールアドレスを入力してください",
                  required: true, 
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-base sm:leading-6" %> 
          </div>
        </div>
        <div>
          <%= f.label :password, "* パスワード", class: "block text-base font-bold leading-6 text-gray-900" %>
          <% if @minimum_password_length %>
            <em class="block text-sm font-medium leading-6 text-gray-900">
              (英数字を含む <%= @minimum_password_length %> 文字以上で入力してください)
            </em>
          <% end %>
          <div class="mt-2">
            <%= f.password_field :password, 
                  placeholder: "パスワードを入力してください", 
                  required: true, 
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-base sm:leading-6"%>
          </div>
        </div>
        <div>
          <%= f.label :password_confirmation, "* 確認用パスワード", class: "block text-base font-bold leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, 
                  placeholder: "再度パスワードを入力してください",
                  required: true, 
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-base sm:leading-6"%>
          </div>
        </div>
        <div>
          <%= f.submit "新しいアカウントを作成",
                class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-base font-bold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>
    <div class="mt-10 text-center text-base text-gray-500">
      <%= link_to "アカウントをお持ちの方はログイン", new_user_session_path, class:"font-bold leading-6 text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
