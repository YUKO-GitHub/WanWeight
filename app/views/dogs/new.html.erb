<% provide(:title, "愛犬登録") %>
<div class="flex min-h-full flex-col justify-center mt-10 lg:mt-20 py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">愛犬を登録する</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white mx-2 px-6 pt-6 pb-12 shadow sm:rounded-lg sm:px-12">
      <%= form_with model: @dog, class: "space-y-6", local: true do |f| %>
        <%= render 'dogs/shared/error_messages', dog: @dog %>
        <div>
          <%= f.label :name, "* 名前", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :name, 
                  autofocus: true, 
                  placeholder: "愛犬の名前（10文字以内で入力してください）",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-sm sm:leading-6" %> 
          </div>
        </div>

        <div>
          <%= f.label :birthday, "* 誕生日", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.date_select :birthday, {start_year: 2000, end_year: 2023,
              include_blank: true, use_two_digit_numbers: true},
              {class: "rounded-md input-tab birthday-select border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-sm sm:leading-6"} %>
          </div>
        </div>

        <div>
          <%= f.label :sex, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.select :sex, Dog.sexes.keys.map { |key| [I18n.t("activerecord.enums.dog.sex.#{key}"), key] }, {},
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-sm sm:leading-6" %> 
          </div>
        </div>

        <div>
          <%= f.label :breed, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :breed, 
                  placeholder: "例：チワワ",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-sm sm:leading-6" %> 
          </div>
        </div>

        <div>
          <%= f.label :avatar, "画像を登録", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.file_field :avatar, 
                  class: "block w-full text-sm text-gray-900 file:mr-4 file:rounded-md file:border-0 file:py-1.5 file:px-4 file:text-sm file:font-semibold file:bg-gray-50 file:text-gray-700 hover:file:bg-gray-100" %>
          </div>
        </div>

        <div>
          <%= f.submit "愛犬を登録",
                class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>

    <div class="mt-10 text-center text-sm text-gray-500">
      <%= link_to "マイページに戻る", mypage_path, class:"font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
