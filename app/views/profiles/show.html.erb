<% provide(:title, "プロフィール") %>
<div class="container mx-auto px-4">
  <div class="relative isolate sm:mt-10 pt-20">
    <div class="space-y-10 divide-y divide-gray-900/10">
      <div class="pt-10 grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-3">
        <div>
          <h2 class="text-lg font-bold leading-7 text-gray-900">プロフィール</h2>
        </div>
      
        <div class="shadow-sm ring-1 ring-gray-900/5 rounded-xl md:col-span-2">
          <div class="px-4 py-6 sm:p-8">
            <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
              <div class="border-b-2 sm:col-span-4">
                <%= label_tag :name, "ユーザー名", class: "block text-md font-bold leading-6" %>
                <div class="mt-2 sm:max-w-md">
                  <span class="block py-1.5 pl-1 text-sm sm:text-base sm:leading-6"><%= @user.name %></span>
                </div>
              </div>
      
              <div class="border-b-2 sm:col-span-4">
                <%= label_tag :birthday, "誕生日", class: "block text-md font-bold leading-6" %>
                <div class="mt-2 sm:max-w-md">
                  <span class="block py-1.5 pl-1 text-sm sm:text-base sm:leading-6"><%= @user.birthday.to_fs(:custom_day) %></span>
                </div>
              </div>
      
              <div class="border-b-2 sm:col-span-4">
                <%= label_tag :introduction, "自己紹介", class: "block text-md font-bold leading-6" %>
                <div class="mt-2 sm:max-w-md">
                  <span class="block py-1.5 pl-1 text-sm sm:text-base sm:leading-6"><%= @user.introduction %></span>
                </div>
              </div>

              <div class="border-b-2 sm:col-span-4 mt-2">
                <%= label_tag :avatar, "プロフィール画像", class: "block text-md font-bold leading-6" %>
                <div class="mt-4 mb-4 sm:max-w-md">
                  <% if @user.avatar.attached? %>
                    <%= image_tag @user.avatar, class: "w-36 h-36 object-cover rounded-md shadow-lg" %>
                  <% else %>
                    <span class="inline-block h-14 w-14 overflow-hidden rounded-md bg-gray-100">
                      <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                      </svg>
                    </span>
                    <span class="text-gray-500 ml-2">画像が登録されていません</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
            <%= link_to "編集", profiles_edit_path, class:"rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
