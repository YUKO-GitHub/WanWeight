<% provide(:title, "日記を作成する") %>
<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">日記を作成する</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow sm:rounded-lg sm:px-10">
      <%= form_with model: @diary, url: diaries_path, local: true do |f| %>
        <div>
          <%= f.label :dog_id, "日記の対象", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :dog_id, @dog_options, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="mt-6">
          <%= f.label :date, "日付", class: "block text-sm font-medium text-gray-700" %>
          <%= f.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
        </div>

        <div class="mt-6">
          <%= f.label :diary_text, "日々の記録", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :diary_text, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="mt-6">
          <%= f.label :meal_text, "食事の記録", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :meal_text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="mt-6">
          <%= f.label :exercise_text, "運動の記録", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :exercise_text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="mt-6">
          <%= f.label :health_text, "健康の記録", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :health_text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="mt-6">
          <%= f.label :photos, "写真をアップロード", class: "block text-sm font-medium text-gray-700" %>
          <%= f.file_field :photos, multiple: true, accept: 'image/*', 
                class: "mt-2 block w-full text-sm text-gray-900 file:mr-4 file:rounded-md file:border-0 file:py-1.5 file:px-4 file:text-sm file:font-semibold file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200" %>
        </div>

        <div class="mt-6">
          <%= f.submit "日記を作成", 
                class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-center text-sm text-gray-500">
      <%= link_to "キャンセル", diaries_path, class:"font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
