<% provide(:title, "体重の管理") %>
<div class="mt-6 py-10">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h1 class="mt-6 text-3xl font-bold leading-tight tracking-tight text-gray-900">体重の管理</h1>
  </div>

  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8 mt-6">
    <div class="flex justify-between items-center mb-4">
      <div>
        <%= form_with(url: user_weights_path, method: :get, local: true) do |f| %>
          <%= f.select :date, date_options, { selected: "#{@year}-#{@month}" }, class: "mr-2", onchange: 'this.form.submit()' %>
        <% end %>
      </div>
    </div>
    <% if @user_weights_for_graph.any? %>
      <%= line_chart @user_weights_for_graph, height: "250px" %>
    <% else %>
      <p>No data available.</p>
    <% end %>
  </div>

  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8 mt-6">
    <h2 class="text-xl font-semibold mb-4">体重の一覧</h2>
    <table class="min-w-full bg-white border rounded">
      <thead>
        <tr>
          <th class="text-left px-4 py-2">日時</th>
          <th class="text-left px-4 py-2">体重</th>
          <th class="text-left px-4 py-2">アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @user_weights.each do |user_weight| %>
        <tr>
          <td class="border px-4 py-2"><%= user_weight.date.to_fs(:custom_datetime) %></td>
          <td class="border px-4 py-2"><%= user_weight.weight %> kg</td>
          <td class="border px-4 py-2">
            <%= link_to '編集', edit_user_weight_path(user_weight) %> |
            <%= link_to '削除', user_weight_path(user_weight), method: :delete, data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
